@page
@model IndexModel
@{
    ViewData["Title"] = "صفحه ورود";
}

<div class="row justify-content-center align-items-center">
    <div class="col-lg-6">
        <div class="bs-component">
            @Html.ValidationMessage("WrongUP")
            <form method="post">
                    <span asp-validation-for="loginModel.Username"></span>
                    <div class="form-group">
                        <label asp-for="loginModel.Username"></label>
                        <input class="form-control" asp-for="loginModel.Username">
                    </div>

                    <span asp-validation-for="loginModel.Password"></span>
                    <div class="form-group">
                        <label asp-for="loginModel.Password"></label>
                        <input class="form-control" asp-for="loginModel.Password" type="password">
                    </div>

                    <button type="submit" class="btn btn-primary">ورود</button>
            </form>
        </div>
    </div>
</div>