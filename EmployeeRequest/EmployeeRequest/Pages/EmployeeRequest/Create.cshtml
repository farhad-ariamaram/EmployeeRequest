}


<h1>Create</h1>

<h4>TblEmployeeRequestEmployeeRequest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestUserApplicantId" class="control-label"></label>
                <select asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestUserApplicantId" class="form-control" asp-items="ViewBag.FldEmployeeRequestUserApplicantId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestUserAccepterId" class="control-label"></label>
                <select asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestUserAccepterId" class="form-control" asp-items="ViewBag.FldEmployeeRequestUserAccepterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestUserSubmitterId" class="control-label"></label>
                <select asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestUserSubmitterId" class="form-control" asp-items="ViewBag.FldEmployeeRequestUserSubmitterId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestJobTaminId" class="control-label"></label>
                <select asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestJobTaminId" class="form-control" asp-items="ViewBag.FldEmployeeRequestJobTaminId"></select>
            </div>

            <div class="form-group">
                <label class="control-label">نام شغل را وارد کنید</label>
                <input id="JobName" name="JobName" type="text" class="form-control" />
