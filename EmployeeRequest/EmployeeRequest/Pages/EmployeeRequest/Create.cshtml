            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestNeedMan" /> @Html.DisplayNameFor(model => model.TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestNeedMan)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestNeedWoman" /> @Html.DisplayNameFor(model => model.TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestNeedWoman)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestIsTransfered" /> @Html.DisplayNameFor(model => model.TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestIsTransfered)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestTransferDate" class="control-label"></label>
                <input asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestTransferDate" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestTransferDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestAcceptDate" class="control-label"></label>
                <input asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestAcceptDate" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestAcceptDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestInternalDescription" class="control-label"></label>
                <input asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestInternalDescription" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestInternalDescription" class="text-danger"></span>
