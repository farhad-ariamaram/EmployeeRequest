            </div>

            <div class="form-group" id="onetjobsection" style="display:none">
                <label class="control-label">شغل اونت</label>
                <select class="form-control" id="onetjobdropdown" name="onetjobdropdown">
                </select>
            </div>

            <div class="form-group">
                <label asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestStartDate" class="control-label"></label>
                <input asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestStartDate" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestEndDate" class="control-label"></label>
                <input asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestEndDate" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestEndDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestIsAccept" /> @Html.DisplayNameFor(model => model.TblEmployeeRequestEmployeeRequest.FldEmployeeRequestEmployeeRequestIsAccept)
