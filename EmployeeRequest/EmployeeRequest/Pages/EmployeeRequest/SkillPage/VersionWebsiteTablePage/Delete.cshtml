@page
@model EmployeeRequest.SkillPage.VersionWebsiteTablePage.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>حذف</h1>

<h3>آیا از حذف این مورد مطمئن هستید؟</h3>
<div>
    <h4>وبگاه ورژن</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            وبگاه ورژن
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VersionWebsiteTable.VersionWebsite)
        </dd>
        <dt class="col-sm-2">
            وبگاه آموزشی
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VersionWebsiteTable.EducationalWebsite)
        </dd>
        <dt class="col-sm-2">
            وبگاه سوالات مرتبط
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VersionWebsiteTable.QuestionalWebsite)
        </dd>
        <dt class="col-sm-2">
            ورژن
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.VersionWebsiteTable.Version.Id)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="VersionWebsiteTable.Id" />
        <input type="submit" value="حذف" class="btn btn-danger" />
        <a asp-page="./Index" asp-route-id="@Model.VersionWebsiteTable.VersionId">انصراف</a>
    </form>
</div>

@section Botton {
    <a class="btn btn-danger rounded-circle" asp-page="./Index" asp-route-id="@Model.VersionWebsiteTable.VersionId"><i class="fa fa-arrow-circle-left"></i></a>
}