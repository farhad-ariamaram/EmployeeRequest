@page
@model EmployeeRequest.SkillPage.VersionWebsiteTablePage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>ویرایش وبگاه ورژن</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VersionWebsiteTable.Id" />
            <div class="form-group">
                <label asp-for="VersionWebsiteTable.VersionWebsite" class="control-label">وبگاه ورزن</label>
                <input asp-for="VersionWebsiteTable.VersionWebsite" class="form-control" />
                <span asp-validation-for="VersionWebsiteTable.VersionWebsite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VersionWebsiteTable.EducationalWebsite" class="control-label">وبگاه آموزشی</label>
                <input asp-for="VersionWebsiteTable.EducationalWebsite" class="form-control" />
                <span asp-validation-for="VersionWebsiteTable.EducationalWebsite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VersionWebsiteTable.QuestionalWebsite" class="control-label">وبگاه سوالات مرتبط</label>
                <input asp-for="VersionWebsiteTable.QuestionalWebsite" class="form-control" />
                <span asp-validation-for="VersionWebsiteTable.QuestionalWebsite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VersionWebsiteTable.VersionId" class="control-label">ورژن</label>
                <select asp-for="VersionWebsiteTable.VersionId" class="form-control" asp-items="ViewBag.VersionId"></select>
                <span asp-validation-for="VersionWebsiteTable.VersionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Botton {
    <a class="btn btn-danger rounded-circle" asp-page="./Index" asp-route-id="@Model.VersionWebsiteTable.VersionId"><i class="fa fa-arrow-circle-left"></i></a>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
