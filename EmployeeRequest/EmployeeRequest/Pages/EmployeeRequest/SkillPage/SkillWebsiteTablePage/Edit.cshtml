@page
@model EmployeeRequest.SkillPage.SkillWebsiteTablePage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>ویرایش وبگاه مهارت</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SkillWebsiteTable.Id" />
            <div class="form-group">
                <label asp-for="SkillWebsiteTable.SkillWebsite" class="control-label">وبگاه مهارت</label>
                <input asp-for="SkillWebsiteTable.SkillWebsite" class="form-control" />
                <span asp-validation-for="SkillWebsiteTable.SkillWebsite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SkillWebsiteTable.EducationalWebsite" class="control-label">وبگاه آموزشی</label>
                <input asp-for="SkillWebsiteTable.EducationalWebsite" class="form-control" />
                <span asp-validation-for="SkillWebsiteTable.EducationalWebsite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SkillWebsiteTable.QuestionalWebsite" class="control-label">وبگاه سوالات مرتبط</label>
                <input asp-for="SkillWebsiteTable.QuestionalWebsite" class="form-control" />
                <span asp-validation-for="SkillWebsiteTable.QuestionalWebsite" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SkillWebsiteTable.SkillId" class="control-label">مهارت</label>
                <select asp-for="SkillWebsiteTable.SkillId" class="form-control" asp-items="ViewBag.SkillId"></select>
                <span asp-validation-for="SkillWebsiteTable.SkillId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Botton {
    <a class="btn btn-danger rounded-circle" asp-page="./Index" asp-route-id="@Model.SkillWebsiteTable.SkillId"><i class="fa fa-arrow-circle-left"></i></a>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
