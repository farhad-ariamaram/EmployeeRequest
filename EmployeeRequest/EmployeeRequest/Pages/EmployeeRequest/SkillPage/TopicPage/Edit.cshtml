@page
@model EmployeeRequest.SkillPage.TopicPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>ویرایش سرفصل</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Topic.Id" />
            <input type="hidden" asp-for="Topic.VersionId" />
            <div class="form-group">
                <label asp-for="Topic.Title" class="control-label">عنوان فارسی</label>
                <input asp-for="Topic.Title" class="form-control" />
                <span asp-validation-for="Topic.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic.EnglishTitle" class="control-label">عنوان انگلیسی</label>
                <input asp-for="Topic.EnglishTitle" class="form-control" />
                <span asp-validation-for="Topic.EnglishTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic.Description" class="control-label">توضیحات فارسی</label>
                <div class="remove-enter">
                    <textarea asp-for="Topic.Description" class="form-control areainputs remove-enter"></textarea>
                    <div>0/4000</div>
                </div>
                
                <span asp-validation-for="Topic.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic.EnglishDescription" class="control-label">توضیحات انگلیسی</label>
                <div class="remove-enter">
                    <textarea asp-for="Topic.EnglishDescription" class="form-control areainputs remove-enter"></textarea>
                    <div>0/4000</div>
                </div>
                
                <span asp-validation-for="Topic.EnglishDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic.Active" class="control-label">وضعیت</label>
                <input asp-for="Topic.Active" class="form-control" />
                <span asp-validation-for="Topic.Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Topic.Number" class="control-label">شماره</label>
                <input asp-for="Topic.Number" class="form-control" />
                <span asp-validation-for="Topic.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Botton {
    <a class="btn btn-danger rounded-circle" asp-page="./Index" asp-route-id="@Model.Topic.VersionId"><i class="fa fa-arrow-circle-left"></i></a>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
