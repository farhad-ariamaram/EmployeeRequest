@page
@model EmployeeRequest.SkillPage.VersionPage.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>افزودن ورژن</h1>
<p>
    <span class="badge badge-info text-white bigger">
        مهارت انتخاب شده: @Model.SkillTitle
    </span>
</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Version.SkillId" value="@Model.SkillId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Version.Version1" class="control-label">ورژن انگلیسی</label>
                <input asp-for="Version.Version1" class="form-control" />
                <span asp-validation-for="Version.Version1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Version.PersianVersion" class="control-label">ورژن فارسی</label>
                <input asp-for="Version.PersianVersion" class="form-control" />
                <span asp-validation-for="Version.PersianVersion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">تاریخ شروع</label>
                <input class="form-control" type="text" id="startdate" readonly />
                <span id="span1"></span>
                <div onclick="clearDate('startdate','Version_StartDate')" class="fa fa-calendar-minus" data-toggle="tooltip" title="پاک کردن تاریخ"></div>
                <input type="hidden" asp-for="Version.StartDate" class="form-control" />
                <span asp-validation-for="Version.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">تاریخ پایان</label>
                <input class="form-control" type="text" id="enddate" readonly />
                <span id="span2"></span>
                <div onclick="clearDate('enddate','Version_EndDate')" class="fa fa-calendar-minus" data-toggle="tooltip" title="پاک کردن تاریخ"></div>
                <input type="hidden" asp-for="Version.EndDate" class="form-control" />
                <span asp-validation-for="Version.EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Version.Description" class="control-label">توضیحات فارسی</label>
                <div class="remove-enter11">
                    <textarea asp-for="Version.Description" maxlength="4000" class="form-control remove-enter1"></textarea>
                    <span>0/4000</span>
                </div>
                <span asp-validation-for="Version.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Version.EnglishDescription" class="control-label">توضیحات انگلیسی</label>
                <div class="remove-enter12">
                    <textarea asp-for="Version.EnglishDescription" maxlength="4000" class="form-control remove-enter2"></textarea>
                    <span>0/4000</span>
                </div>
                <span asp-validation-for="Version.EnglishDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Version.Active" class="control-label">وضعیت</label>
                <input asp-for="Version.Active" class="form-control" />
                <span asp-validation-for="Version.Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="افزودن" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Botton {
    <a class="btn btn-danger rounded-circle" asp-page="./Index" asp-route-id="@Model.SkillId"><i class="fa fa-arrow-circle-left"></i></a>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function Load() {
            $("#startdate, #span1").persianDatepicker({
                onSelect: function () {
                    $("#Version_StartDate").val($("#startdate").attr("data-gdate"));
                }
            });
            $("#enddate, #span2").persianDatepicker({
                onSelect: function () {
                    $("#Version_EndDate").val($("#enddate").attr("data-gdate"));
                }
            });
        }
    </script>
}
