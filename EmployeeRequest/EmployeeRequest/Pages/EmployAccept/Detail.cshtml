    @*Military*@
    <div class="col-lg-4 col-md-6 col-sm-12">
        @if (Model.TblEmployeeRequestEmployee.TblEmployeeRequestUserMilitaries.FirstOrDefault().FldEmployeeRequestMilitaryId == null)
        {
            <div class="card text-white bg-danger mb-3" style="max-width: 20rem;">
                <div class="card-header">سوابق سربازی (0)<i class="fa-pull-left"><img src="~/img/soldier.png" width="20" height="20" /></i></div>
            </div>
        }
        else
        {
            <div class="card text-white bg-success mb-3" style="max-width: 20rem;">
                <div onclick="$('#milit').toggle()" class="card-header">سوابق سربازی<i class="fa-pull-left"><img src="~/img/soldier.png" width="20" height="20" /></i></div>
                <div id="milit" style="display:none" class="card-body">
                    @foreach (var item in Model.TblEmployeeRequestEmployee.TblEmployeeRequestUserMilitaries)
                    {
                        <table class="table text-white">
                            <tbody>
                                <tr>
                                    <td>وضعیت سربازی</td>
                                    <td>
                                        @if (item.FldEmployeeRequestMilitaryId != null)
                                        {
                                            @item.FldEmployeeRequestMilitary.FldEmployeeRequestMilitaryMilitaryStatus
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>ارگان خدمتی</td>
                                    <td>
                                        @if (item.FldEmployeeRequestMilitaryOrganizationId != null)
                                        {
                                            @item.FldEmployeeRequestMilitaryOrganization.FldEmployeeRequestMilitaryOrganizationOrganizationName
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>شهر محل خدمت</td>
                                    <td>
                                        @item.FldEmployeeRequestUserMilitaryCity
                                    </td>
                                </tr>
                                <tr>
                                    <td>تاریخ شروع</td>
                                    <td>
                                        @item.FldEmployeeRequestUserMilitaryStartDate.toPersianDate()
                                    </td>
                                </tr>
                                <tr>
                                    <td>تاریخ پایان</td>
                                    <td>
                                        @item.FldEmployeeRequestUserMilitaryEndDate.toPersianDate()
                                    </td>
                                </tr>
                                <tr>
                                    <td>توضیحات معافیت</td>
                                    <td>
                                        @item.FldEmployeeRequestUserMilitaryExemptDescription
                                    </td>
                                </tr>
                                <tr>
                                    <td>واحد</td>
                                    <td>
                                        @item.FldEmployeeRequestUserMilitaryUnit
                                    </td>
                                </tr>
                                <tr>
                                    <td>توضیحات</td>
                                    <td>
                                        @item.FldEmployeeRequestUserMilitaryDescription
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        }


    </div>

    @*Skill*@
    <div class="col-lg-4 col-md-6 col-sm-12">
        @if (Model.TblEmployeeRequestEmployee.TblEmployeeRequestUserSkills.Count() < 2 && string.IsNullOrEmpty(Model.TblEmployeeRequestEmployee.TblEmployeeRequestUserSkills.FirstOrDefault().FldEmployeeRequestUserSkillSkillTitle))
        {
            <div class="card text-white bg-danger mb-3" style="max-width: 20rem;">
                <div class="card-header">مهارت ها (0)<i class="fa fa-cogs fa-pull-left"></i></div>
            </div>
        }
        else
        {
            <div class="card text-white bg-success mb-3" style="max-width: 20rem;">
                <div onclick="$('#skills').toggle()" class="card-header"><i class="fa fa-cogs fa-pull-left"></i>مهارت ها (@(Model.TblEmployeeRequestEmployee.TblEmployeeRequestUserSkills.Count()))</div>
                <div id="skills" style="display:none" class="card-body">
                    @foreach (var item in Model.TblEmployeeRequestEmployee.TblEmployeeRequestUserSkills)
                    {
                        <table class="table text-white">
                            <tbody>
                                <tr>
                                    <td><span class="badge badge-danger">جدید</span></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>عنوان مهارت</td>
                                    <td>
                                        @item.FldEmployeeRequestUserSkillSkillTitle
                                    </td>
                                </tr>
                                <tr>
                                    <td>سطح مهارت</td>
                                    <td>
                                        @item.FldEmployeeRequestUserSkillSkillLevel
                                    </td>
                                </tr>
                                <tr>
                                    <td>نوع مهارت</td>
                                    <td>
                                        @item.FldEmployeeRequestUserSkillSkillType
                                    </td>
                                </tr>
                                <tr>
                                    <td>محل اخذ گواهی</td>
                                    <td>
                                        @item.FldEmployeeRequestUserSkillLocation
                                    </td>
                                </tr>
                                <tr>
                                    <td>مرجع صادر کننده گواهی</td>
                                    <td>
                                        @item.FldEmployeeRequestUserSkillLicenseReference
                                    </td>
                                </tr>
                                <tr>
                                    <td>شماره گواهی</td>
                                    <td>
                                        @item.FldEmployeeRequestUserSkillLicenseNo
                                    </td>
                                </tr>
                                <tr>
                                    <td>خوداموز</td>
                                    <td>
                                        @(@item.FldEmployeeRequestUserSkillIsSelfTaught ? "بله" : "خیر")
                                    </td>
                                </tr>
                                <tr>
                                    <td>تاریخ</td>
                                    <td>
                                        @item.FldEmployeeRequestUserSkillDate.toPersianDate()
                                    </td>
                                </tr>
                                <tr>
                                    <td>توضیحات</td>
                                    <td>
                                        @item.FldEmployeeRequestUserSkillDescription
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        }


    </div>

    @*WorkExperience*@
    <div class="col-lg-4 col-md-6 col-sm-12">
        @if (string.IsNullOrEmpty(Model.TblEmployeeRequestEmployee.TblWorkExperiences.FirstOrDefault().FldCompanyName) && Model.TblEmployeeRequestEmployee.TblWorkExperiences.Count() < 2)
        {
            <div class="card text-white bg-danger mb-3" style="max-width: 20rem;">
                <div class="card-header">سوابق شغلی (0)<i class="fa-pull-left"><img src="~/img/workexperience.png" height="20" width="20" /></i></div>
            </div>
        }
        else
        {
            <div class="card text-white bg-success mb-3" style="max-width: 20rem;">
                <div onclick="$('#works').toggle()" class="card-header"><i class="fa-pull-left"><img src="~/img/workexperience.png" height="20" width="20" /></i>سوابق شغلی (@(Model.TblEmployeeRequestEmployee.TblWorkExperiences.Count()))</div>
                <div id="works" style="display:none" class="card-body">
                    @foreach (var item in Model.TblEmployeeRequestEmployee.TblWorkExperiences)
                    {
                        <table class="table text-white">
                            <tbody>
                                <tr>
                                    <td><span class="badge badge-danger">جدید</span></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td>نام شغل</td>
                                    <td>
                                        @if (item.FldTaminJobId != null)
                                        {
                                            @item.FldTaminJob.FldTaminJobName
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>تعداد روز های بیمه</td>
                                    <td>
                                        @item.FldAmountOfDailyInsurance
                                    </td>
                                </tr>
                                <tr>
                                    <td>نام شرکت</td>
                                    <td>
                                        @item.FldCompanyName
                                    </td>
                                </tr>
                                <tr>
                                    <td>شماره داخلی شرکت</td>
                                    <td>
                                        @item.FldContactInnerNumberOfCompany
                                    </td>
                                </tr>
                                <tr>
                                    <td>شماره تلفن شرکت</td>
                                    <td>
                                        @item.FldContactNumberOfCompany
                                    </td>
                                </tr>
                                <tr>
                                    <td>توضیحات</td>
                                    <td>
                                        @item.FldDescription
                                    </td>
                                </tr>
                                <tr>
                                    <td>حقوق</td>
                                    <td>
                                        @item.FldEarlySalary
                                    </td>
                                </tr>
                                <tr>
                                    <td>تاریخ ترک شغل</td>
                                    <td>
                                        @item.FldEndDate.toPersianDate()
                                    </td>
                                </tr>
                                <tr>
                                    <td>عنوان شغل</td>
                                    <td>
                                        @item.FldJobTitle
                                    </td>
                                </tr>
                                <tr>
                                    <td>اخرین حقوق</td>
                                    <td>
                                        @item.FldLateSalary
                                    </td>
                                </tr>
                                <tr>
                                    <td>دلیل ترک کار</td>
                                    <td>
                                        @item.FldReasonsToLeaveJob
                                    </td>
                                </tr>
                                <tr>
                                    <td> فرد مرتبط</td>
                                    <td>
                                        @item.FldRelatedPeople
                                    </td>
                                </tr>
                                <tr>
                                    <td>تاریخ شروع کار</td>
                                    <td>
                                        @item.FldStartDate.toPersianDate()
                                    </td>
                                </tr>
                                <tr>
                                    <td>نام واحد</td>
                                    <td>
                                        @item.FldUnitName
                                    </td>
                                </tr>
                                <tr>
                                    <td>روز کاری</td>
                                    <td>
                                        @item.FldWorkDay
                                    </td>
                                </tr>
                                <tr>
                                    <td>ساعت کاری</td>
                                    <td>
                                        @item.FldWorkTime
                                    </td>
                                </tr>
                                <tr>
                                    <td>بیمه</td>
                                    <td>
                                        @(@item.HasInsurance ? "دارد" : "ندارد")
                                    </td>
                                </tr>
                                <tr>
                                    <td>شماره بیمه</td>
                                    <td>
                                        @item.InsuranceNo
                                    </td>
                                </tr>
                                <tr>
                                    <td>مشغول به کار</td>
                                    <td>
                                        @if (@item.IsWorking == true)
                                        {
                                            @("میباشد")
                                        }
                                        else
                                        {
                                            @("نمیباشد")
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <td>دستاورد ها</td>
                                    <td>
                                        @item.PreviousJobAchievements
                                    </td>
                                </tr>
                                <tr>
                                    <td> دلیل تغییر شغل</td>
                                    <td>@item.WhyWantChangeJob</td>
                                </tr>
                                <tr>
                                    <td>دلایل ترک/نارضایتی شغل</td>
                                    <td>
                                        @foreach (var item2 in item.TblWorkExperienceLeaveJobDtls.Where(a => a.FldWorkExperienceId == item.FldWorkExperienceId))
                                        {
                                            <ul>
                                                <li>@item2.FldLeaveJobNavigation.FldLeaveJobTitle &nbsp; @item2.FldLeaveJobPercent%</li>
                                            </ul>
                                        }
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    }
                </div>
            </div>
        }

    </div>
</div>
