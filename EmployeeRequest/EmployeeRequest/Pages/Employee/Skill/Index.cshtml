@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>جدول مهارت های کاربر</h1>

<p>
    <a class="btn btn-primary" asp-page="Create" asp-route-id="@Model.TblEmployeeRequestUserSkill.FirstOrDefault().FldEmployeeRequestEmployeeId">ایجاد</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                عنوان مهارت
            </th>
            <th>
                توضیحات بیشتر
            </th>
            <th>
                محل
            </th>
            <th>
                تاریخ
            </th>
            <th>
                نوع
            </th>
            <th>
                سطح
            </th>
            <th>
                شماره مدرک
            </th>
            <th>
                مرجع مدرک
            </th>
            <th>
                خودآموز
            </th>
            <th>
                نام و نام خانوادگی
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TblEmployeeRequestUserSkill)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FldEmployeeRequestUserSkillSkillTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FldEmployeeRequestUserSkillDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FldEmployeeRequestUserSkillLocation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FldEmployeeRequestUserSkillDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FldEmployeeRequestUserSkillSkillType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FldEmployeeRequestUserSkillSkillLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FldEmployeeRequestUserSkillLicenseNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FldEmployeeRequestUserSkillLicenseReference)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FldEmployeeRequestUserSkillIsSelfTaught)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FldEmployeeRequestEmployee.TblEmployeeRequestPrimaryInformations.FirstOrDefault().FldEmployeeRequestPrimaryInformationFirstName) &nbsp;
                    @Html.DisplayFor(modelItem => item.FldEmployeeRequestEmployee.TblEmployeeRequestPrimaryInformations.FirstOrDefault().FldEmployeeRequestPrimaryInformationLastName)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.FldEmployeeRequestUserSkillId">ویرایش</a> |
                    <a asp-page="./Delete" asp-route-id="@item.FldEmployeeRequestUserSkillId">حذف</a>
                </td>
            </tr>
        }
    </tbody>
</table>
