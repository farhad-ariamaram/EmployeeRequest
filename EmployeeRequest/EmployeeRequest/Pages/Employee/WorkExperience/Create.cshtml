@page
@model CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>ایجاد</h1>

<h4>جدول سوابق شغلی کاربر</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">نام شرکت</label>
                <input asp-for="TblWorkExperience.FldCompanyName" class="form-control" />
                <span asp-validation-for="TblWorkExperience.FldCompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">تاریخ شروع</label>
                <input type="hidden" asp-for="TblWorkExperience.FldStartDate" class="form-control" />
                <input class="form-control" type="text" id="input1" readonly />
                <span id="span1"></span>
                <span asp-validation-for="TblWorkExperience.FldStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">تاریخ پایان</label>
                <input type="hidden" asp-for="TblWorkExperience.FldEndDate" class="form-control" />
                <input class="form-control" type="text" id="input2" readonly />
                <span id="span2"></span>
                <span asp-validation-for="TblWorkExperience.FldEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">توضیحات بیشتر</label>
                <input asp-for="TblWorkExperience.FldDescription" class="form-control" />
                <span asp-validation-for="TblWorkExperience.FldDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">شماره تماس شرکت</label>
                <input asp-for="TblWorkExperience.FldContactNumberOfCompany" class="form-control" />
                <span asp-validation-for="TblWorkExperience.FldContactNumberOfCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">شماره داخلی شرکت</label>
                <input asp-for="TblWorkExperience.FldContactInnerNumberOfCompany" class="form-control" />
                <span asp-validation-for="TblWorkExperience.FldContactInnerNumberOfCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">افراد مرتبط</label>
                <input asp-for="TblWorkExperience.FldRelatedPeople" class="form-control" />
                <span asp-validation-for="TblWorkExperience.FldRelatedPeople" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">نام شغل از جدول</label>
                <a class="btn btn-info" onclick="loadjson()">بارگذاری</a>
                <select asp-for="TblWorkExperience.FldTaminJobId" class="form-control select2-dropdown" id="taminjobdropdown"></select>
            </div>
            <div class="form-group">
                <label class="control-label">عنوان شغل</label>
                <input asp-for="TblWorkExperience.FldJobTitle" class="form-control" />
                <span asp-validation-for="TblWorkExperience.FldJobTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">حقوق ماهیانه</label>
                <input asp-for="TblWorkExperience.FldEarlySalary" class="form-control" />
                <span asp-validation-for="TblWorkExperience.FldEarlySalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">آخرین حقوق دریافتی</label>
                <input asp-for="TblWorkExperience.FldLateSalary" class="form-control" />
                <span asp-validation-for="TblWorkExperience.FldLateSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">دلیل ترک شغل</label>
                <input asp-for="TblWorkExperience.FldReasonsToLeaveJob" class="form-control" />
                <span asp-validation-for="TblWorkExperience.FldReasonsToLeaveJob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">دلیل ترک شغل از جدول</label>
                <select asp-for="TblWorkExperience.FldLeaveJobId" class="form-control" asp-items="ViewBag.FldLeaveJobId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">ساعت کاری</label>
                <input asp-for="TblWorkExperience.FldWorkTime" class="form-control" />
                <span asp-validation-for="TblWorkExperience.FldWorkTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">روز کاری در هفته</label>
                <input asp-for="TblWorkExperience.FldWorkDay" class="form-control" />
                <span asp-validation-for="TblWorkExperience.FldWorkDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">نام واحد</label>
                <input asp-for="TblWorkExperience.FldUnitName" class="form-control" />
                <span asp-validation-for="TblWorkExperience.FldUnitName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TblWorkExperience.HasInsurance" /> بیمه
                </label>
            </div>
            <div class="form-group">
                <label class="control-label">شماره بیمه</label>
                <input asp-for="TblWorkExperience.InsuranceNo" class="form-control" />
                <span asp-validation-for="TblWorkExperience.InsuranceNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">دلیل ترک شغل</label>
                <input asp-for="TblWorkExperience.WhyWantChangeJob" class="form-control" />
                <span asp-validation-for="TblWorkExperience.WhyWantChangeJob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">دستاورد ها</label>
                <input asp-for="TblWorkExperience.PreviousJobAchievements" class="form-control" />
                <span asp-validation-for="TblWorkExperience.PreviousJobAchievements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">زمینه کاری شرکت</label>
                <input asp-for="TblWorkExperience.FieldOfWork" class="form-control" />
                <span asp-validation-for="TblWorkExperience.FieldOfWork" class="text-danger"></span>
            </div>
            <input type="hidden" value="@ViewData["EmployeeId"]" asp-for="TblWorkExperience.UserId" />

            <div class="form-group">
                <input type="submit" value="ایجاد" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Botton {
    <a class="btn btn-outline-dark rounded" asp-page="Index" asp-route-id="@ViewData["EmployeeId"]"><i class="fa fa-arrow-circle-left"></i></a>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/lib/sweetalert/sweetalert2.10.js"></script>
    <script>
        function Load() {
            $('.select2-dropdown').select2({
                width: 'resolve'
            });

            $("#input1, #span1").persianDatepicker({
                onSelect: function () {
                    $("#TblWorkExperience_FldStartDate").val($("#input1").attr("data-gdate"));
                }
            });

            $("#input2, #span2").persianDatepicker({
                onSelect: function () {
                    $("#TblWorkExperience_FldEndDate").val($("#input2").attr("data-gdate"));
                }
            });
        }

        async function loadjson() {
            const { value: jobtitle } = await Swal.fire({
                input: 'text',
                inputLabel: 'عنوان شغل',
                inputPlaceholder: 'عنوان شغل را وارد کنید',
                showCancelButton: true,
                confirmButtonText: `تایید`,
                cancelButtonText: `انصراف`,
            })
            if (jobtitle) {
                if (jobtitle == "") {
                    Swal.fire('مقدار وارد شده اشتباه میباشد', '', 'error').then(() => {
                        location.reload();
                    })
                    return false;
                }
                loadjson2(jobtitle);
            }
        }

        function loadjson2(jobtitle) {
            let dropdown = $('#taminjobdropdown');

            dropdown.empty();

            var data = { jobName: jobtitle };
            $.ajax({
                type: "GET",
                url: "../../EmployeeRequest/Create?handler=Jobs",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                async: true,
                data: data,
                success: function (response) {
                    $.each(response, function (key, entry) {
                        dropdown.append($('<option></option>').attr('value', entry.fldTaminJobId).text(entry.fldTaminJobName));
                    });
                },
                failure: function () {
                    alert("Error on get tamin jobs");
                },
                beforeSend: function () {
                    Swal.fire({
                        html: 'در حال بارگذاری اطلاعات، لطفا منتظر بمانید...',
                        allowOutsideClick: false,
                        showConfirmButton: false,
                        onBeforeOpen: () => {
                            Swal.showLoading()
                        },
                    });
                },
                complete: function () {
                    swal.close();
                },
            });
        }
    </script>
}
