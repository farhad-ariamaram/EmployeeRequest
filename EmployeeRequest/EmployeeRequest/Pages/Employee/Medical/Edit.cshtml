@page
@model EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>ویرایش</h1>

<h4>جدول سوابق پزشکی کاربر</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestMedicalRecordId" />
            <input type="hidden" asp-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestEmployeeId" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestMedicalRecordHasProblem" /> بیماری
                </label>
            </div>
            <div class="form-group">
                <label class="control-label">توضیحات بیماری</label>
                <input asp-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestMedicalRecordProblemDes" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestMedicalRecordProblemDes" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestMedicalRecordIsAddict" /> اعتیاد
                </label>
            </div>
            <div class="form-group">
                <label class="control-label">توضیحات بیشتر</label>
                <input asp-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestMedicalRecordDescription" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestMedicalRecordDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">نام بیماری</label>
                <input asp-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestMedicalRecordDisease" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestMedicalRecordDisease" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">تاریخ شروع</label>
                <input asp-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestMedicalRecordStartDate" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestMedicalRecordStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">تاریخ پایان</label>
                <input asp-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestMedicalRecordEndDate" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestMedicalRecordEndDate" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestMedicalRecordHasComplications" /> عوارض
                </label>
            </div>
            <div class="form-group">
                <label class="control-label">توضیحات عوارض</label>
                <input asp-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestMedicalRecordComplicationsDes" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestMedicalRecord.FldEmployeeRequestMedicalRecordComplicationsDes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

  <div>
      <a asp-page="Index" asp-route-id="TblEmployeeRequestMedicalRecord .FldEmployeeRequestEmployeeId">بازگشت به لیست</a>
  </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
