@page
@model Employee.Compile.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>ایجاد</h1>

<h4>جدول تالیف های کاربر</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">نوع تالیف</label>
                <select asp-for="TblEmployeeRequestUserCompilation.FldEmployeeRequestCompilationTypeId" class="form-control" asp-items="ViewBag.FldEmployeeRequestCompilationTypeId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">عنوان تالیف</label>
                <input asp-for="TblEmployeeRequestUserCompilation.FldEmployeeRequestUserCompilationTitle" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestUserCompilation.FldEmployeeRequestUserCompilationTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">توضیح تالیف</label>
                <input asp-for="TblEmployeeRequestUserCompilation.FldEmployeeRequestUserCompilationExplanation" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestUserCompilation.FldEmployeeRequestUserCompilationExplanation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">تاریخ تالیف</label>
                <input asp-for="TblEmployeeRequestUserCompilation.FldEmployeeRequestUserCompilationDate" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestUserCompilation.FldEmployeeRequestUserCompilationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">انتشارات</label>
                <input asp-for="TblEmployeeRequestUserCompilation.FldEmployeeRequestUserCompilationAuthor" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestUserCompilation.FldEmployeeRequestUserCompilationAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">توضیحات بیشتر</label>
                <input asp-for="TblEmployeeRequestUserCompilation.FldEmployeeRequestUserCompilationDescription" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestUserCompilation.FldEmployeeRequestUserCompilationDescription" class="text-danger"></span>
            </div>
            <input type="hidden" value="@ViewData["EmployeeId"]" asp-for="TblEmployeeRequestUserCompilation.FldEmployeeRequestEmployeeId" />
            <div class="form-group">
                <input type="submit" value="ایجاد" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-id="@ViewData["EmployeeId"]">بازگشت به لیست</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
