@page
@model Employee.Suggestion.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>حذف</h1>

<h3>آیا از حذف این مورد مطمئن میباشید؟</h3>
<div>
    <h4>جدول انتقادات و پیشنهادات</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            انتقادات و پیشنهادات
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblUserSuggestion.Suggestion)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="TblUserSuggestion.Id" />
        <input type="submit" value="حذف" class="btn btn-danger" />
    </form>
</div>

@section Botton {
    <a class="btn btn-outline-dark rounded" asp-page="Index" asp-route-id="@Model.TblUserSuggestion.UserId"><i class="fa fa-arrow-circle-left"></i></a>
}