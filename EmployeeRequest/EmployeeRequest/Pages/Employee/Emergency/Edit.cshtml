@page
@model Employee.Emergency.EditModel

@{
    ViewData["Title"] = "Edit";
}

    <h1>ویرایش</h1>

    <h4>جدول اطلاعات اشنایان کاربر</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TblEmployeeRequestEmergencyCall.FldEmployeeRequestEmergencyCallId" />
            <input type="hidden" asp-for="TblEmployeeRequestEmergencyCall.FldEmployeeRequestEmployeeId" />
            <div class="form-group">
                <label class="control-label">نام</label>
                <input asp-for="TblEmployeeRequestEmergencyCall.FldEmployeeRequestEmergencyCallFirstName" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestEmergencyCall.FldEmployeeRequestEmergencyCallFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">نام خانوادگی</label>
                <input asp-for="TblEmployeeRequestEmergencyCall.FldEmployeeRequestEmergencyCallLastName" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestEmergencyCall.FldEmployeeRequestEmergencyCallLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">نسبت</label>
                <input asp-for="TblEmployeeRequestEmergencyCall.FldEmployeeRequestEmergencyCallRelative" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestEmergencyCall.FldEmployeeRequestEmergencyCallRelative" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">شماره تماس</label>
                <input asp-for="TblEmployeeRequestEmergencyCall.FldEmployeeRequestEmergencyCallPhoneNo" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestEmergencyCall.FldEmployeeRequestEmergencyCallPhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">توضیحات بیشتر</label>
                <input asp-for="TblEmployeeRequestEmergencyCall.FldEmployeeRequestEmergencyCallDescription" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestEmergencyCall.FldEmployeeRequestEmergencyCallDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-id="@Model.TblEmployeeRequestEmergencyCall.FldEmployeeRequestEmployeeId">بازگشت به لیست</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
