@page
@model Employee.General.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>حذف</h1>

<h3>آیا از حذف این مورد مطمئن میباشید؟</h3>
<div>
    <h4>جدول سوابق عمومی (کیفری) کاربر</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            عنوان جرم
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblEmployeeRequestGeneralRecord.FldEmployeeRequestGeneralRecordCriminalTiltle)
        </dd>
        <dt class="col-sm-2">
            توضیحات جرم
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblEmployeeRequestGeneralRecord.FldEmployeeRequestGeneralRecordCriminalDes)
        </dd>
        <dt class="col-sm-2">
            توضیحات بیشتر
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblEmployeeRequestGeneralRecord.FldEmployeeRequestGeneralRecordDescription)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="TblEmployeeRequestGeneralRecord.FldEmployeeRequestGeneralRecordId" />
        <input type="submit" value="حذف" class="btn btn-danger" />
    </form>
</div>

@section Botton {
    <a class="btn btn-outline-dark rounded" asp-page="Index" asp-route-id="@Model.TblEmployeeRequestGeneralRecord.FldEmployeeRequestEmployeeId"><i class="fa fa-arrow-circle-left"></i></a>
}