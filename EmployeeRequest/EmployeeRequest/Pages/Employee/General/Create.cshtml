@page
@model Employee.General.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>ایجاد</h1>

<h4>جدول سوابق عمومی (کیفری) کاربر</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">عنوان جرم</label>
                <input asp-for="TblEmployeeRequestGeneralRecord.FldEmployeeRequestGeneralRecordCriminalTiltle" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestGeneralRecord.FldEmployeeRequestGeneralRecordCriminalTiltle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">توضیحات جرم</label>
                <input asp-for="TblEmployeeRequestGeneralRecord.FldEmployeeRequestGeneralRecordCriminalDes" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestGeneralRecord.FldEmployeeRequestGeneralRecordCriminalDes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">توضیحات بیشتر</label>
                <input asp-for="TblEmployeeRequestGeneralRecord.FldEmployeeRequestGeneralRecordDescription" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestGeneralRecord.FldEmployeeRequestGeneralRecordDescription" class="text-danger"></span>
            </div>
            <input type="hidden" value="@ViewData["EmployeeId"]" asp-for="TblEmployeeRequestGeneralRecord.FldEmployeeRequestEmployeeId" />
            <div class="form-group">
                <input type="submit" value="ایجاد" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Botton {
    <a class="btn btn-outline-dark rounded" asp-page="Index" asp-route-id="@ViewData["EmployeeId"]"><i class="fa fa-arrow-circle-left"></i></a>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
