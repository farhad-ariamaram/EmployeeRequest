@page
@model Employee.HowFind.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>جدول چگونه با ما آشنا شدید؟</h1>
<br />
<div class="row">
    <div class="col-12">
        <a class="btn btn-primary" asp-page="Create" asp-route-id="@Model.TblEmployeeRequestHowFind.FirstOrDefault().FldEmployeeRequestEmployeeId">ایجاد</a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>
                عنوان
            </th>
            <th>
                توضیحات بیشتر
            </th>
            <th>
                نام و نام خانوادگی
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TblEmployeeRequestHowFind)
        {
        <tr>
            <td>
                <a class="btn btn-warning btn-group-sm text-white" asp-page="./Edit" asp-route-id="@item.FldEmployeeRequestHowFindId"><i class="fa fa-edit"></i></a>
                <a class="btn btn-danger btn-group-sm" asp-page="./Delete" asp-route-id="@item.FldEmployeeRequestHowFindId"><i class="fa fa-trash"></i></a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FldEmployeeRequestHowFindTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FldEmployeeRequestHowFindAdditionalDes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FldEmployeeRequestEmployee.TblEmployeeRequestPrimaryInformations.FirstOrDefault().FldEmployeeRequestPrimaryInformationFirstName) &nbsp;
                @Html.DisplayFor(modelItem => item.FldEmployeeRequestEmployee.TblEmployeeRequestPrimaryInformations.FirstOrDefault().FldEmployeeRequestPrimaryInformationLastName)
            </td>

        </tr>
        }
    </tbody>
</table>

@section Botton {
    <a class="btn btn-outline-dark rounded" asp-page="../../EmployAccept/Detail" asp-route-id="@Model.TblEmployeeRequestHowFind.FirstOrDefault().FldEmployeeRequestEmployeeId"><i class="fa fa-arrow-circle-left"></i></a>
}