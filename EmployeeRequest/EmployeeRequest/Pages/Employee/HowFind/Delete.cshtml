@page
@model Employee.HowFind.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>حذف</h1>

<h3>آیا از حذف این مورد مطمئن میباشید؟</h3>
<div>
    <h4>جدول چگونه با ما آشنا شدید</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            عنوان
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblEmployeeRequestHowFind.FldEmployeeRequestHowFindTitle)
        </dd>
        <dt class="col-sm-2">
            توضیحات بیشتر
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblEmployeeRequestHowFind.FldEmployeeRequestHowFindAdditionalDes)
        </dd>
        <dt class="col-sm-2">
            نام و نام خانوادگی
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TblEmployeeRequestHowFind.FldEmployeeRequestEmployee.TblEmployeeRequestPrimaryInformations.FirstOrDefault().FldEmployeeRequestPrimaryInformationFirstName) &nbsp;
            @Html.DisplayFor(model => model.TblEmployeeRequestHowFind.FldEmployeeRequestEmployee.TblEmployeeRequestPrimaryInformations.FirstOrDefault().FldEmployeeRequestPrimaryInformationLastName)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="TblEmployeeRequestHowFind.FldEmployeeRequestHowFindId" />
        <input type="submit" value="حذف" class="btn btn-danger" /> |
    </form>
</div>

@section Botton {
    <a class="btn btn-outline-dark rounded" asp-page="Index" asp-route-id="@Model.TblEmployeeRequestHowFind.FldEmployeeRequestEmployeeId"><i class="fa fa-arrow-circle-left"></i></a>
}
