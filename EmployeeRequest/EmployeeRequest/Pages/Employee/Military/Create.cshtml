@page
@model CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>ایجاد</h1>

<h4>جدول وضعیت سربازی کاربر</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">وضعیت سربازی</label>
                <select asp-for="TblEmployeeRequestUserMilitary.FldEmployeeRequestMilitaryId" class="form-control" asp-items="ViewBag.FldEmployeeRequestMilitaryId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">تاریخ شروع</label>
                <input type="hidden" asp-for="TblEmployeeRequestUserMilitary.FldEmployeeRequestUserMilitaryStartDate" class="form-control" />
                <input class="form-control" type="text" id="input1" readonly />
                <span id="span1"></span>
                <span asp-validation-for="TblEmployeeRequestUserMilitary.FldEmployeeRequestUserMilitaryStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">تاریخ پایان</label>
                <input type="hidden" asp-for="TblEmployeeRequestUserMilitary.FldEmployeeRequestUserMilitaryEndDate" class="form-control" />
                <input class="form-control" type="text" id="input2" readonly />
                <span id="span2"></span>
                <span asp-validation-for="TblEmployeeRequestUserMilitary.FldEmployeeRequestUserMilitaryEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">ارگان</label>
                <select asp-for="TblEmployeeRequestUserMilitary.FldEmployeeRequestMilitaryOrganizationId" class="form-control" asp-items="ViewBag.FldEmployeeRequestMilitaryOrganizationId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">شهر محل خدمت</label>
                <input asp-for="TblEmployeeRequestUserMilitary.FldEmployeeRequestUserMilitaryCity" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestUserMilitary.FldEmployeeRequestUserMilitaryCity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">واحد</label>
                <input asp-for="TblEmployeeRequestUserMilitary.FldEmployeeRequestUserMilitaryUnit" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestUserMilitary.FldEmployeeRequestUserMilitaryUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">توضیحات معافیت</label>
                <input asp-for="TblEmployeeRequestUserMilitary.FldEmployeeRequestUserMilitaryExemptDescription" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestUserMilitary.FldEmployeeRequestUserMilitaryExemptDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">توضیحات بیشتر</label>
                <input asp-for="TblEmployeeRequestUserMilitary.FldEmployeeRequestUserMilitaryDescription" class="form-control" />
                <span asp-validation-for="TblEmployeeRequestUserMilitary.FldEmployeeRequestUserMilitaryDescription" class="text-danger"></span>
            </div>
            <input type="hidden" value="@ViewData["EmployeeId"]" asp-for="TblEmployeeRequestUserMilitary .FldEmployeeRequestEmployeeId" />

            <div class="form-group">
                <input type="submit" value="ایجاد" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" asp-route-id="@ViewData["EmployeeId"]">بازگشت به لیست</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        function Load() {
            $("#input1, #span1").persianDatepicker({
                onSelect: function () {
                    $("#TblEmployeeRequestUserMilitary_FldEmployeeRequestUserMilitaryStartDate").val($("#input1").attr("data-gdate"));
                }
            });

            $("#input2, #span2").persianDatepicker({
                onSelect: function () {
                    $("#TblEmployeeRequestUserMilitary_FldEmployeeRequestUserMilitaryEndDate").val($("#input2").attr("data-gdate"));
                }
            });
        }
    </script>
}
